{
  "name": "a-mail",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "Originally prototyped for my current firm, this client interaction project reimagines all client side communication (direct emails, website form submissions, client portal enquiries) with sleek and secure AI integration which has cut down almost 80% of time spent on client interaction",
  "scripts": {
    "dev": "vite --mode production",
    "dev:beta": "vite --mode development",
    "build": "tsc -b && vite build --mode production",
    "build:beta": "tsc -b && vite build --mode development",
    "preview": "vite preview",
    "preview:local": "vite preview --host 0.0.0.0 --port 4173",
    "serve": "npx serve dist -s -l 4173",
    "lint": "eslint ."
  },
  "dependencies": {
    "axios": "^1.7.9",
    "lucide-react": "^0.468.0",
    "@heroicons/react": "^2.1.5",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "serve": "^14.2.4",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.4"
  }
}
